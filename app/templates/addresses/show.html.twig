{% extends 'base.html.twig' %}

{% block title %}Addresses{% endblock %}

{% block body %}
    <h1>Addresses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Address_number</th>
                <td>{{ address.addressNumber }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ address.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ address.postalCode }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ address.country }}</td>
            </tr>
            <tr>
                <th>Address_type</th>
                <td>{{ address.addressType }}</td>
            </tr>
            <tr>
                <th>Address_supplement</th>
                <td>{{ address.addressSupplement }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_addresses_index') }}">back to list</a>

    <a href="{{ path('app_addresses_edit', {'id': address.id}) }}">edit</a>

    {{ include('addresses/_delete_form.html.twig') }}
{% endblock %}
