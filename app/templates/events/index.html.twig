{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
    <header class="header" role="banner">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du site">
        <!-- Menu de navigation si nécessaire -->
    </header>

    <main class="events-page" role="main">
        <h1>Événements</h1>
        <section class="events-list" role="list">
            {% for event in events %}
                <article class="event" role="listitem">
                    <a href="{{ event.link }}" class="event-link">
                        <img src="{{ event.image }}" alt="{{ event.title }}">
                        <div class="event-info">
                            <h2>{{ event.title }}</h2>
                            <p>{{ event.date|date('d/m/Y') }}</p>
                            <p>{{ event.location }}</p>
                        </div>
                    </a>
                </article>
            {% else %}
                <p>Aucun événement trouvé.</p>
            {% endfor %}
        </section>
    </main>

    <footer class="footer" role="contentinfo">
        <!-- Contenu du pied de page -->
    </footer>
{% endblock %}